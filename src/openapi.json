{
  "openapi": "3.0.3",
  "info": {
    "title": "K8s job dispatcher",
    "description": "This is a simple facade over the Kubernetes API that converts requests into Job workloads.",
    "version": "v0.4.2"
  },
  "externalDocs": {
    "description": "Github repository",
    "url": "https://github.com/kklingenberg/k8s-job-dispatcher"
  },
  "tags": [
    {
      "name": "job",
      "description": "Create and fetch jobs"
    },
    {
      "name": "health",
      "description": "Diagnose the API"
    }
  ],
  "paths": {
    "/job": {
      "post": {
        "tags": ["job"],
        "summary": "Create a job",
        "description": "Create a kubernetes job",
        "operationId": "createJob",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {},
              "example": {
                "args": ["Hello", "world!"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "job with the generated name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobSummary"
                }
              }
            }
          },
          "201": {
            "description": "job was created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobSummary"
                }
              }
            }
          },
          "400": {
            "description": "job generation failed because of an invalid job manifest",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          },
          "502": {
            "description": "job generation failed while trying to communicate with the kubernetes API",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          }
        }
      }
    },
    "/job/{path}": {
      "post": {
        "tags": ["job"],
        "summary": "Create a job",
        "description": "Create a kubernetes job",
        "operationId": "createJobWithPath",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "description": "Path information to provide for the job",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {},
              "example": {
                "args": ["Hello", "world!"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "job with the generated name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobSummary"
                }
              }
            }
          },
          "201": {
            "description": "job was created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobSummary"
                }
              }
            }
          },
          "400": {
            "description": "job generation failed because of an invalid job manifest",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          },
          "502": {
            "description": "job generation failed while trying to communicate with the kubernetes API",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          }
        }
      }
    },
    "/job/{id}": {
      "get": {
        "tags": ["job"],
        "summary": "Fetch a job",
        "description": "Fetch a job by its ID",
        "operationId": "fetchJob",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the job to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "job matching the given ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobSummary"
                }
              }
            }
          },
          "404": {
            "description": "job doesn't exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          },
          "502": {
            "description": "job fetching failed while trying to communicate with the kubernetes API",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIError"
                }
              }
            }
          }
        }
      }
    },
    "/health/live": {
      "get": {
        "tags": ["health"],
        "summary": "Liveness test",
        "description": "A liveness test",
        "operationId": "liveness",
        "responses": {
          "204": {
            "description": "Liveness test passes"
          }
        }
      }
    },
    "/health/ready": {
      "get": {
        "tags": ["health"],
        "summary": "Readiness test",
        "description": "A readiness test",
        "operationId": "readiness",
        "responses": {
          "204": {
            "description": "Readiness test passes"
          },
          "503": {
            "description": "The kubernetes API couldn't be reached"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "JobSummary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "example": "job-id"
          },
          "status": {}
        }
      },
      "APIError": {
        "type": "object",
        "properties": {
          "status": {
            "type": "integer",
            "example": 400
          },
          "msg": {
            "type": "string",
            "example": "Invalid payload"
          }
        }
      }
    }
  }
}
